<Window x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Form Tracker" 
        Height="1000" Width="1920"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing"
        KeyDown="OnKeyDownHandler">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <Viewbox HorizontalAlignment="Center" Stretch="None" VerticalAlignment="Center" >
            <Border BorderThickness="1"
                    BorderBrush="#FF000000"
                    VerticalAlignment="Top">
            <Image Height="800" Width="800" Source="{Binding ImageSource}"  />
            </Border>
        </Viewbox>
        <Frame x:Name="Main" VerticalAlignment="Center" Source="MainMenu.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
